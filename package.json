{
  "name": "alura-timer",
  "version": "0.1.0",
  "description": "aplicação desktop de um timer utilizando o framework Electron",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build:linux": "electron-packager . alura-timer --platform=linux --arch=x64 --overwrite --out dist",
    "build:linux:deb": "npm run build:linux && electron-installer-debian --src dist/alura-timer-linux-x64/ --dest dist/installers/ --arch amd64",
    "build:win": "electron-packager . alura-timer --platform=win32 --arch=x64 --overwrite --out dist",
    "build:darwin": "electron-packager . alura-timer --platform=darwin --arch=x64 --overwrite --out dist"
  },
  "keywords": [
    "electron",
    "desktop"
  ],
  "author": "Brian izaki",
  "license": "ISC",
  "dependencies": {
    "jsonfile-promised": "^0.0.1"
  },
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.4.0"
  }
}
